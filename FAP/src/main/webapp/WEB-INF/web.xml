<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controllers.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MajorController</servlet-name>
        <servlet-class>controllers.MajorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>YearController</servlet-name>
        <servlet-class>controllers.YearController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WeekController</servlet-name>
        <servlet-class>controllers.WeekController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MajorController</servlet-name>
        <url-pattern>/MajorController</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>YearController</servlet-name>
        <url-pattern>/YearController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WeekController</servlet-name>
        <url-pattern>/WeekController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
